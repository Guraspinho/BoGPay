{
  "name": "bogpay",
  "version": "1.6.1",
  "description": "An NPM package for simplifying and managing payments with the Bank of Georgia API, providing easy-to-use functions for authentication, payment processing, refunds, and more.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/Guraspinho/BoGPay",
  "keywords": [
    "Bank of Georgia",
    "payment",
    "bog",
    "api"
  ],
  "scripts": {
    "build": "tsup",
    "build-and-run": "npm run build && npm start",
    "dev": "nodemon --watch src --ext ts --exec \"npm run build-and-run\"",
    "start": "node dist/index.js",
    "test": "jest"
  },
  "author": "Irakli Guraspashvili",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "ts-jest": "^29.2.5",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  }
}
